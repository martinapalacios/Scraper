{{#each articles}}
  <div class="row">
    <div class="col s12 m12">
      <div class="card">
        <div class="card-content">
          <span class="card-title">{{this.title}}</span>
          <p>{{this.excerpt}}</p>
          <img src="{{this.image}}">
        </div>
        <div class="card-action">
          <a class="waves-effect waves-light btn green" href="{{this.link}}">Read</a>
          <!-- Modal Trigger -->
          <a class="waves-effect waves-light btn blue" href="#modal-{{this.id}}">Notes</a>
          <a class="waves-effect waves-light btn red" href="/articles/delete/{{this.id}}">Delete Article</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Structure -->
  <div id="modal-{{this.id}}" class="modal bottom-sheet">
    <div class="modal-content">
      <h4>{{this.title}}</h4>
      <h5>Notes</h5>
      <ul>
        {{#each this.notes}}
          <li>{{this.body}} <small><a href="/articles/delete-note/{{this.id}}">Delete</a></small></li>
        {{/each}}
      </ul>
      <textarea id="textarea-{{this.id}}" class="materialize-textarea"></textarea>
      <label for="textarea-{{this.id}}">Add a note to this article</label>
    </div>
    <div class="modal-footer">
      <a class="waves-effect waves-green btn-flat add-note" data-id="{{this.id}}">Add Note</a>
    </div>
  </div>
{{/each}}